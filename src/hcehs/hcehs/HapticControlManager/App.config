<configuration>
  <system.serviceModel>
    <services>
      <service name="HapCon.HapticService.HapticService" behaviorConfiguration="mexBehaviour">
        <endpoint address="HapticService" binding="basicHttpBinding" contract="HapCon.HapticService.IHapticService">
        </endpoint>
        <endpoint address="HapticService" binding="netTcpBinding" contract="HapCon.HapticService.IHapticService">
        </endpoint>
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange">
        </endpoint>
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8080/"/>
            <add baseAddress="net.tcp://localhost:8090/"/>
          </baseAddresses>
        </host>
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="mexBehaviour">
          <serviceMetadata httpGetEnabled="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>